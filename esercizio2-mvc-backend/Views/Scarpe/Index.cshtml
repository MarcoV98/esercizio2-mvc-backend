@model List<esercizio2_mvc_backend.Models.Scarpa>

<h2>Scarpe in vendita</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Descrizione</th>
            <th>Immagine</th>
            <th>Opzioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var scarpa in Model)
        {
            <tr>
                <td>@scarpa.Nome</td>
                <td>@scarpa.Prezzo</td>
                <td>@scarpa.Descrizione</td>
                <td><img src="placeholder" alt="Immagine copertina" style="max-width: 100px;" /></td>
                <td>
                    <a asp-action="Dettagli" asp-route-id="@scarpa.Id">Dettagli</a> |
                    <form asp-action="RimuoviDallaVetrina" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@scarpa.Id" />
                        <input type="submit" value="Rimuovi dalla vetrina" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
