@model esercizio2_mvc_backend.Models.Scarpa

<h2>Dettagli della Scarpa</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Nome</dt>
        <dd>@Model.Nome</dd>

        <dt>Prezzo</dt>
        <dd>@Model.Prezzo</dd>

        <dt>Descrizione</dt>
        <dd>@Model.Descrizione</dd>

        <dt>Immagine Copertina</dt>
        <dd><img src="placeholder" alt="placeholder" style="max-width: 200px;" /></dd>

        @if (!string.IsNullOrEmpty(Model.ImmagineAggiuntiva1))
        {
            <dt>Immagine Aggiuntiva 1</dt>
            <dd><img src="placeholder" alt="Immagine aggiuntiva 1" style="max-width: 200px;" /></dd>
        }

        @if (!string.IsNullOrEmpty(Model.ImmagineAggiuntiva2))
        {
            <dt>Immagine Aggiuntiva 2</dt>
            <dd><img src="placeholder" alt="Immagine aggiuntiva 2" style="max-width: 200px;" /></dd>
        }

        <dt>In Vendita</dt>
        <dd>@(Model.InVendita ? "Sì" : "No")</dd>
    </dl>
</div>
